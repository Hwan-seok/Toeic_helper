<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.androidtown.my_project">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.LoginActivity"
            android:theme="@style/NoTitlebar" />
        <activity
            android:name=".Activity.RegistActivity"
            android:theme="@style/NoTitlebar" />
        <activity
            android:name=".Activity.MenuActivity"
            android:theme="@style/NoTitlebar" />
        <activity android:name=".Activity.OCRActivity"
            android:label="Solve Problem"/>
        <activity android:name=".Activity.AnswerActivity"
            android:label="This is the Answer"/>
        <activity android:name=".Activity.DailyActivity"
            android:label="Solve Problem"/>
        <activity android:name=".Activity.DailyAnswerActivity"
            android:label="This is the Answer"/>
        <activity
            android:name=".Activity.Mypage.MyPageActivity">
        </activity>
        <activity android:name=".Activity.UserActivity"
            android:label="My Page"/>
        <activity android:name=".Activity.UserAnswerActivity"
            android:label="My Page"/>
    </application>

</manifest>