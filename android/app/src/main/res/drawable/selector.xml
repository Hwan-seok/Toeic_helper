<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#AAA5D6" />
            <stroke
                android:width="4dp"
                android:color="#3A3587" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item android:state_selected="true" >
        <shape>
            <solid
                android:color="#AAA5D6" />
            <stroke
                android:width="4dp"
                android:color="#3A3587" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="#D4D2D6" />
            <stroke
                android:width="3dp"
                android:color="#000000" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>