<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginpage2">

    <RelativeLayout
        android:id="@+id/TextLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/LoginButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/TextLayout">

        <EditText
            android:id="@+id/IdText"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/loginborder"
            android:hint=" Id"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/PassWordText"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/IdText"
            android:layout_below="@+id/IdText"
            android:layout_marginTop="2dp"
            android:background="@drawable/loginborder"
            android:hint=" PassWord"
            android:textSize="20dp"
            android:inputType="textPassword"/>

        <Button
            android:background="@drawable/loginbutton"
            android:typeface="serif"
            android:id="@+id/LoginButton"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/PassWordText"
            android:layout_below="@+id/PassWordText"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:onClick="mainstart"
            android:text="로그인"
            android:textSize="15dp" />

    </RelativeLayout>
    <Button
        android:background="@drawable/loginbutton"
        android:id="@+id/ResgistButton"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/LoginButtonLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:text="회원가입"
        android:onClick="RegistInfo"/>

</RelativeLayout>